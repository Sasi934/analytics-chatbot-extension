<?xml version="1.0" encoding="utf-8"?>
<Manifest xmlns="http://tableau.com/schemas/extension/manifest" version="1.0">
  <Extension>
    <Id>analytics.chatbot.extension</Id>
    <Name>Analytics Chatbot</Name>
    <Description>Conversational insights for Tableau dashboards with OpenAI integration.</Description>

    <!-- Path to your extension's main HTML file -->
    <ExtensionUrl>src/index.html</ExtensionUrl>

    <!-- Icon used in Tableau -->
    <Icons>
      <Icon size="48">src/assets/icons/chatbot.png</Icon>
    </Icons>

    <!-- Permissions this extension needs -->
    <Permissions>
      <Permission>ReadData</Permission>
      <Permission>ReadMetadata</Permission>
    </Permissions>

    <!-- Developer info -->
    <Developer>
      <Name>Sasi Reddy</Name>
      <Email>ippalashashankreddy@gmail.com</Email>
      <Url>https://sasi934.github.io/analytics-chatbot-extension/</Url>
    </Developer>
  </Extension>
</Manifest>
